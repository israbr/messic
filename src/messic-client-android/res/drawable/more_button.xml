<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dip" android:bottomRightRadius="10dip" android:topLeftRadius="10dip" android:topRightRadius="10dip" />
            <solid android:color="@color/green"/>
        </shape>
    </item>
    <item android:drawable="@color/transparent" android:state_pressed="false"></item>

</selector>