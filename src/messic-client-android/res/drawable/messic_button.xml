<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />

            <stroke android:width="1px" android:color="#007700" />

            <gradient android:angle="-90" android:endColor="#00EE00" android:startColor="#00FF00" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />

            <stroke android:width="1px" android:color="#00FF00" />

            <gradient android:angle="-90" android:endColor="#FFFFFF" android:startColor="#FAFAFA" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />

            <stroke android:width="1px" android:color="#DDDDDD" />

            <gradient android:angle="-90" android:endColor="#FFFFFF" android:startColor="#FAFAFA" />
        </shape></item>

</selector>