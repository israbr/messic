<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item android:state_enabled="false">
         <shape>
	          <gradient android:angle="270" android:endColor="#888888" android:startColor="#AAAAAA" />
	          <corners android:radius="10dp" />
	          <stroke android:width="1px" android:color="#BBBBBB" />
         </shape>
	</item>
	
	<item android:state_pressed="true">
	    <layer-list>
	        <item android:right="1dp" android:top="1dp">
	            <shape>
		            <corners android:radius="10dp" />
	                <solid android:color="#33000000" />
	            </shape>
	        </item>
	        <item android:bottom="1dp" android:left="1dp">
	            <shape>
		            <gradient android:angle="270" android:endColor="#cede85" android:startColor="#a7bf35" />
		            <corners android:radius="10dp" />
		            <stroke android:width="1px" android:color="#BBBBBB" />
	            </shape>
	        </item>
	    </layer-list>
	</item>    
	    
	<item>
	    <layer-list>
	        <item android:right="2dp" android:top="2dp">
	            <shape>
		            <corners android:radius="10dp" />
	                <solid android:color="#33000000" />
	            </shape>
	        </item>
	        <item android:bottom="2dp" android:left="2dp">
	            <shape>
		            <gradient android:angle="270" android:endColor="#a7bf35" android:startColor="#cede85" />
		            <corners android:radius="10dp" />
		            <stroke android:width="1px" android:color="#BBBBBB" />
	            </shape>
	        </item>
	    </layer-list>
	</item>
</selector>