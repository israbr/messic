<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="messicTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarTabTextStyle">@style/messicActionBarTabText</item>
        <item name="android:actionBarTabStyle">@style/messicActionBarTabs</item>
        <item name="android:cacheColorHint">@color/green</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="messicActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">

        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="messicActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>