<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listitem_gradient"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="1dp"
    android:paddingTop="10dp"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/album_icover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:contentDescription="@string/app_name" >
    </ImageView>

    <TextView
        android:id="@+id/album_tauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/album_icover"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/album_ivmore"
        android:layout_toRightOf="@+id/album_icover"
        android:ellipsize="end"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:text="Small Text with some appareances of the test"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#444444"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/album_talbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_tauthor"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/album_tauthor"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4444FF"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_icover"
        android:layout_alignTop="@+id/album_icover"
        android:layout_marginLeft="7dp"
        android:alpha="0.5"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_play_circle_outline_white_48dp" />

    <ImageView
        android:id="@+id/album_ivmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/more_button"
        android:src="@drawable/ic_more_vert_black_24dp" />

</RelativeLayout>