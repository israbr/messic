<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songdetailed_rlbase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/songdetailed_icover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/songdetailed_tauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songdetailed_talbum"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444444"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/songdetailed_talbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/songdetailed_tauthor"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/songdetailed_icover"
        android:ellipsize="end"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4444FF" />

    <TextView
        android:id="@+id/songdetailed_tsong"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/songdetailed_talbum"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/songdetailed_talbum"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:lines="3"
        android:scrollHorizontally="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#444444"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/songdetailed_ivremove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#EEEEEE"
        android:src="@drawable/ic_close_black_24dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/songdetailed_tsong"
        android:layout_alignLeft="@+id/songdetailed_icover"
        android:layout_marginLeft="35dp"
        android:src="@drawable/ic_play_circle_outline_white_48dp" />

</RelativeLayout>