<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/song_icover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/song_tauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/song_icover"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/relativeLayout2"
        android:layout_toRightOf="@+id/song_icover"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#444444"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/song_talbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/song_tauthor"
        android:layout_below="@+id/song_tauthor"
        android:layout_toLeftOf="@+id/relativeLayout2"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#4444FF" />

    <TextView
        android:id="@+id/song_tsongname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/song_talbum"
        android:layout_below="@+id/song_talbum"
        android:layout_toLeftOf="@+id/relativeLayout2"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#444444" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:alpha="0.5"
        android:src="@drawable/ic_play_circle_outline_white_48dp" />

    <RelativeLayout
        android:id="@+id/songtrack_detailed_playcontent"
        android:layout_width="24dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/play_right" >

        <ImageView
            android:id="@+id/songtrack_detailed_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:alpha="0.3"
            android:src="@drawable/ic_play_arrow_black_24dp" />
    </RelativeLayout>

</RelativeLayout>