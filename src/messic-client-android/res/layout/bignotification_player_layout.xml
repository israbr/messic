<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="5dp"
    android:paddingTop="0dp" >

    <ImageView
        android:id="@+id/base_ivcurrent_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/bignotification_player_cover_contentdescription" />

    <TextView
        android:id="@+id/base_tvcurrent_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/base_ivcurrent_cover"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/base_ivcurrent_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/base_tvcurrent_song"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/base_tvcurrent_author"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/base_tvcurrent_author"
        android:lines="2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/base_ivback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/base_ivcurrent_cover"
        android:layout_alignLeft="@+id/base_tvcurrent_song"
        android:contentDescription="@string/bignotification_player_back_contentdescription"
        android:src="@drawable/ic_skip_previous_white_24dp" />

    <ImageView
        android:id="@+id/base_ivpause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/base_ivback"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/base_ivback"
        android:contentDescription="@string/bignotification_player_pause_contentdescription"
        android:src="@drawable/ic_pause_white_24dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/base_ivplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/base_ivback"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/base_ivback"
        android:contentDescription="@string/bignotification_player_play_contentdescription"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/base_ivnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/base_ivplay"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/base_ivplay"
        android:contentDescription="@string/bignotification_player_next_contentdescription"
        android:src="@drawable/ic_skip_next_white_24dp" />

    <ImageView
        android:id="@+id/base_ivclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/base_tvcurrent_song"
        android:layout_alignTop="@+id/base_ivnext"
        android:contentDescription="@string/bignotification_player_close_contentdescription"
        android:src="@drawable/ic_close_white_24dp" />

</RelativeLayout>