<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>windows</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>

		<!-- Files from Messic-Service -->
		<fileSet>
			<directory>../messic-service/bundles</directory>
			<outputDirectory>/bundles</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../messic-service/felix</directory>
			<outputDirectory>/felix</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../messic-service/jetty</directory>
			<outputDirectory>/jetty</outputDirectory>
			<includes>
				<include>etc/*</include>
			</includes>
		</fileSet>

		<!-- Files from Local -->
		<fileSet>
			<directory>${project.basedir}/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>messic.properties</include>
				<include>messicservice.vbs</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<!-- just copying the config.properties, but the standard file, to avoid 
				problems with the touched config.properties for debug -->
			<source>../messic-service/conf/config-new.properties</source>
			<outputDirectory>/conf</outputDirectory>
			<destName>config.properties</destName>
		</file>
		<file>
			<source>./bin/messic.exe</source>
			<outputDirectory>./</outputDirectory>
			<destName>messic.exe</destName>
		</file>
	</files>


	<!-- Dependencies -->
	<dependencySets>
		<dependencySet>
			<outputDirectory>/classpath</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/classpath</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>system</scope>
		</dependencySet>
	</dependencySets>

</assembly>